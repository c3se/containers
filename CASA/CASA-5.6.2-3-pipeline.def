Bootstrap: docker
From: centos:centos7

%help
    General use CASA

%post
    yum install -y wget
    wget https://casa.nrao.edu/download/distro/casa-pipeline/release/el7/casa-pipeline-release-5.6.2-3.el7.tar.gz
    tar xf casa-pipeline-release-5.6.2-3.el7.tar.gz -C /opt/
    mv /opt/casa* /opt/casa
    rm casa-*.tar.gz
    rm -r /opt/casa/data
    ln -s /cephyr/NOBACKUP/priv/casa-data /opt/casa/data

    yum install -y epel-release
    yum install -y ImageMagick* xorg-x11-server-Xvfb compat-libgfortran-48 libnsl libcanberra-gtk2 fuse fuse-libs

%environment
   export PATH=/opt/casa/bin/:$PATH

%runscript
   casa
