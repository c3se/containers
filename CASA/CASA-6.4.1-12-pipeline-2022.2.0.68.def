Bootstrap: localimage
From: ../RockyLinux/RockyLinux-8.7.sif

%help
    General use CASA

%files
    /apps/sources/c/CASA/casa-6.4.1-12-pipeline-2022.2.0.68-py3.6.tar.xz .

%post
    yum install -y xz
    tar xf casa-6.4.1-12-pipeline-2022.2.0.68-py3.6.tar.xz -C /opt/
    mv /opt/casa* /opt/casa
    rm casa-*.tar.xz

    yum install -y epel-release
    yum install -y ImageMagick* xorg-x11-server-Xvfb compat-libgfortran-48 libnsl libcanberra-gtk2 fuse-libs

%environment
   export PATH=/opt/casa/bin/:$PATH

%runscript
   casa
