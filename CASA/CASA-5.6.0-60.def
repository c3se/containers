Bootstrap: docker
From: centos:centos7

%help
    General use CASA

%files
    /apps/sources/c/CASA/casa-release-5.6.0-60.el6.tar.gz .

%post
    yum install -y xz
    tar xf casa-release-5.6.0-60.el6.tar.gz -C /opt/
    mv /opt/casa* /opt/casa
    # rm casa-*.tar.xz
    rm -r /opt/casa/data
    ln -s /cephyr/NOBACKUP/priv/casa-data /opt/casa/data

    yum install -y epel-release
    yum install -y ImageMagick* xorg-x11-server-Xvfb compat-libgfortran-48 libnsl libcanberra-gtk2 fuse fuse-libs

%environment
   export PATH=/opt/casa/bin/:$PATH

%runscript
   casa
