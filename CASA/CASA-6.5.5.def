Bootstrap: localimage
From: ../RockyLinux/RockyLinux-8.7.sif

%help
    General use CASA

%files
    /apps/sources/c/CASA/casa-6.5.5-21-py3.8.tar.xz

%post
    tar xf casa-*.tar.xz -C /opt/
    mv /opt/casa* /opt/casa
    rm casa-*.tar.xz

    yum install -y epel-release
    yum install -y ImageMagick* xorg-x11-server-Xvfb compat-libgfortran-48 libnsl libcanberra-gtk2

%environment
   export PATH=/opt/casa/bin/:$PATH

%runscript
   casa
